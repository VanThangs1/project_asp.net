@model IList<Menu>

<header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

        <a href="index.html" class="logo d-flex align-items-center">
            <h1 class="sitename">Homework</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                @foreach (var menu in Model.Where(m => m.Levels == 1).OrderBy(n => n.MenuOrder))
                {
                    var Pid = menu.MenuID;  // Lấy ID của menu chính
                    var Smenu = Model.Where(p => p.ParentID == Pid).OrderBy(p => p.MenuOrder).ToList(); // Lấy các submenu

                    if (Smenu.Count == 0)
                    {
                        <li><a href="@menu.Link" class="">@menu.MenuName</a></li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle">
                                <span>@menu.MenuName</span> <i class="bi bi-chevron-down toggle-dropdown"></i>
                            </a>
                            <ul>
                                @foreach (var sm in Smenu)
                                {
                                    <li>
                                        <a href="@sm.Link">@sm.MenuName</a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                }
               
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>
    </div>
</header>

<main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section dark-background">
        <img src="assets/img/hero-bg.jpg" alt="" data-aos="fade-in">
        <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2>Welcome to Homework</h2>
                    <p>We are a team of talented designers making websites with Bootstrap</p>
                    <a href="#about" class="btn-get-started">Get Started</a>
                </div>
            </div>
        </div>
    </section><!-- /Hero Section -->
</main>
